

<div class="py-8">
   <h1 class="text-3xl font-bold text-gray-800 mb-6">Modificar Materia</h1>

   <div class="bg-white p-8 rounded-lg shadow-md max-w-lg mx-auto">
       <% if (typeof subject !== 'undefined') { %>
           <form action="/admin/subjects/edit/<%= subject._id %>" method="POST">
               <div class="mb-4">
                   <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Nombre de la Materia:</label>
                   <input type="text" id="name" name="name" value="<%= subject.name %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
               </div>
               <div class="mb-6">
                   <label for="description" class="block text-gray-700 text-sm font-bold mb-2">Descripci√≥n:</label>
                   <textarea id="description" name="description" rows="4" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"><%= subject.description %></textarea>
               </div>
               <div class="flex items-center justify-between">
                   <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline">Actualizar Materia</button>
                   <a href="/admin/subjects" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Volver a la lista</a>
               </div>
           </form>
           <% if (typeof message !== 'undefined' && message) { %>
               <p class="mt-4 text-red-500 text-sm"><%= message %></p>
           <% } %>
       <% } else { %>
           <p class="text-red-500">Materia no encontrada.</p>
           <a href="/admin/subjects" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800 mt-4">Volver a la lista</a>
       <% } %>
   </div>
</div>
